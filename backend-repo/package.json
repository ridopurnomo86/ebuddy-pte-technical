{
    "name": "backend-repo",
    "version": "0.0.1",
    "main": "./dist/server.js",
    "scripts": {
        "serve": "node dist/server.js",
        "start": "npm run build-ts && nodemon dist/server.js",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "type:check": "tsc --noEmit",
        "prettier:check": "yarn run-prettier -c",
        "prettier:format": "yarn run-prettier --write",
        "start:emulator": "npm run build-ts && firebase emulators:start --only functions"
    },
    "author": "Ridho Purnomo",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.16.2",
        "firebase": "^10.12.2",
        "http-errors": "^1.7.1",
        "joi": "^17.13.3",
        "morgan": "^1.9.1"
    },
    "devDependencies": {
        "@types/express": "4.17.21",
        "@types/http-errors": "1.8.2",
        "@types/morgan": "1.9.9",
        "@types/node": "14.18.63",
        "@types/supertest": "2.0.16",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-plugin-import": "2.29.1",
        "nodemon": "2.0.22",
        "prettier": "2.8.8",
        "typescript": "4.9.5"
    }
}
